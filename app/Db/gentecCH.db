record(calc, "$(BASE):CH$(CHAN):TRIG_VAL") {
    field(DESC, "Slink, convert trigger value")
    field(CALC, "(ABS(A)>B*C*(D/E))?A:F")
    field(INPA, "$(BASE):CH$(CHAN):CALC_MEAS.VAL")
    field(INPB, "$(BASE):CH$(CHAN):SCALE_VAL.VAL")
    field(INPC, "$(BASE):CH$(CHAN):GET_TRIGMODE.RVAL")
    field(INPD, "$(BASE):CH$(CHAN):GET_TRIGLVL.VAL")
    field(INPE, "100.0")
    field(INPF, "$(BASE):CH$(CHAN):MEAS.VAL")
    field(FLNK, "$(BASE):CH$(CHAN):MEAS")
}

